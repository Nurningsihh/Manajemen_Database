        },
        stok: {
          bsonType: "int",
          minimum: 0
        },
        satuan: { bsonType: "string" },
        lokasi: { bsonType: "string" },
        tanggal_masuk: { bsonType: "date" }
      }
    }
  },
  validationLevel: "strict",
